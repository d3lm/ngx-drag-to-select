{
  "name": "ngx-drag-to-select",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "serve:ssr": "node dist/server.js",
    "build": "npm run clean && npm run build:app && npm run build:server",
    "build:ghpages": "npm run clean && npm run build:app -- --base-href /ngx-drag-to-select/ && npm run build:server",
    "build:ssr": "npm run build && npm run webpack:server",
    "build:prerender": "npm run build:ssr && npm run generate:prerender",
    "build:prerender-ghpages": "npm run build:ghpages && npm run webpack:server && npm run generate:prerender",
    "build:app": "ng build app --prod",
    "build:server": "ng build server --prod",
    "build:lib": "npm run clean && npm run build:lib:code && npm run build:lib:sass && npm run copy:styles && npm run copy:readme",
    "build:lib:code": "ng build ngx-drag-to-select --prod",
    "build:lib:sass": "node-sass projects/ngx-drag-to-select/src/scss/ngx-drag-to-select.scss -o dist/ngx-drag-to-select",
    "deploy": "ngh --dir dist/browser",
    "copy:styles": "cpr projects/ngx-drag-to-select/src/scss dist/ngx-drag-to-select/scss",
    "copy:readme": "copyfiles README.md dist/ngx-drag-to-select",
    "generate:prerender": "node dist/prerender.js",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "format:base": "prettier \"{src,cypress,projects}/**/*{.ts,.js,.json}\"",
    "format:check": "npm run format:base -- --list-different",
    "format:fix": "npm run format:base -- --write",
    "style": "npm run lint:check && npm run format:check",
    "style:fix": "npm run lint:fix && npm run format:fix",
    "clean": "del dist",
    "test": "jest --config ./projects/ngx-drag-to-select/jest.config.js",
    "test:ci": "npm run test && start-server-and-test start http-get://localhost:4200 e2e:ci",
    "test:watch": "npm run test -- --watch",
    "lint:check": "ng lint",
    "lint:fix": "ng lint app --fix && ng lint ngx-drag-to-select --fix",
    "e2e": "cypress open",
    "e2e:ci": "cypress run",
    "ci": "npm run lint:check && npm run format:check && npm run test:ci && npm run build:prerender-ghpages",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,projects,cypress}/**/*{.ts,.js,.json}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.0",
    "@angular/cdk": "^6.0.0",
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/forms": "^6.0.0",
    "@angular/http": "^6.0.0",
    "@angular/material": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@angular/platform-server": "^6.0.0",
    "@angular/router": "^6.0.0",
    "core-js": "^2.4.1",
    "rxjs": "^6.1.0",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.0",
    "@angular-devkit/build-ng-packagr": "~0.6.8",
    "@angular/cli": "~6.0.0",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/language-service": "^6.0.0",
    "@bahmutov/add-typescript-to-cypress": "^2.0.0",
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-angular": "^6.1.3",
    "@commitlint/travis-cli": "^6.2.0",
    "@cypress/webpack-preprocessor": "^2.0.1",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@types/node": "^9.6.22",
    "codelyzer": "^4.4.2",
    "copyfiles": "^2.0.0",
    "cpr": "^3.0.1",
    "cypress": "^3.0.2",
    "del-cli": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^22.4.4",
    "jest-preset-angular": "^5.2.3",
    "lint-staged": "^7.2.0",
    "ng-packagr": "^3.0.3",
    "node-sass": "^4.9.2",
    "prettier": "^1.13.7",
    "start-server-and-test": "^1.5.0",
    "ts-loader": "^4.2.0",
    "ts-node": "~5.0.1",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "webpack-cli": "^2.0.14"
  },
  "resolutions": {
    "@types/sinon": "4.0.0"
  }
}
