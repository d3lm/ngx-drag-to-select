{
  "name": "ngx-drag-to-select",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "serve:ssr": "node dist/server.js",
    "build": "npm run clean && npm run build:app && npm run build:server",
    "build:ghpages": "npm run clean && npm run build:app -- --base-href '/ngx-drag-to-select/' && npm run build:server",
    "build:ssr": "npm run build && npm run webpack:server",
    "build:prerender": "npm run build:ssr && npm run generate:prerender",
    "build:prerender-ghpages": "npm run build:ghpages && npm run webpack:server && npm run generate:prerender",
    "build:app": "ng build --prod",
    "build:server": "ng build --prod --app 1 --output-hashing=false",
    "build:lib": "npm run packagr && npm run build:lib:sass && npm run copy:styles",
    "build:lib:sass": "node-sass src/lib/scss/drag-to-select.scss -o dist/lib",
    "packagr": "ng-packagr -p src/lib/package.json",
    "deploy": "ngh --dir dist/browser",
    "copy:styles": "cpr src/lib/scss dist/lib/scss",
    "generate:prerender": "node dist/prerender.js",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "format:base": "prettier '{src,e2e}/**/*{.ts,.js,.json}'",
    "format:check": "npm run format:base -- --list-different",
    "format:fix": "npm run format:base -- --write",
    "style": "npm run lint:check && npm run format:check",
    "style:fix": "npm run lint:fix && npm run format:fix",
    "clean": "del dist",
    "test": "ng test",
    "lint:check": "ng lint",
    "lint:fix": "ng lint --fix",
    "e2e": "ng e2e",
    "ci": "npm run lint:check && npm run format:check && npm run e2e && npm run build:prerender-ghpages"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/cdk": "^5.2.4",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/material": "^5.2.4",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/platform-server": "^5.2.9",
    "@angular/router": "^5.2.0",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "~1.7.3",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@nguniversal/express-engine": "^5.0.0-beta.8",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.8",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^9.6.0",
    "codelyzer": "^4.0.1",
    "cpr": "^3.0.1",
    "del-cli": "^1.1.0",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^2.0.0-rc.13",
    "node-sass": "^4.8.3",
    "prettier": "^1.11.1",
    "protractor": "~5.1.2",
    "source-map-explorer": "^1.5.0",
    "ts-loader": "^3.5.0",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "~2.5.3"
  }
}
